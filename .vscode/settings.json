{
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.probe": ["javascript", "javascriptreact", "vue"],
  // Runs Prettier, then ESLint
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  // disable Vetur extension validating
  "vetur.validation.template": false,
  // ESLint settings
  "eslint.options": {
    "overrideConfigFile": "./configs/eslint/.eslintrc.js",
    "ignorePath": "./configs/eslint/.eslintignore"
  },
  // Prettier settings
  "prettier.configPath": "./configs/prettier/.prettierrc",
  "prettier.ignorePath": "./configs/prettier/.prettierignore"
}
