{
  "name": "dmitriy-frostoffs-cv",
  "version": "1.0.0",
  "description": "Dmitriy Frostoff's CV - Frontend developer",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.cjs",
    "lint:fix": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.cjs --fix",
    "prettier": "npx prettier ./src --check --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/.prettierrc",
    "prettier:fix": "npx prettier ./src --write --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/.prettierrc",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky",
    "style": "sass --watch src/sass/main.scss:style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitriy-Frostoff/rsschool-cv.git"
  },
  "author": "Dmitriy Frostoff",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dmitriy-Frostoff/rsschool-cv/issues"
  },
  "homepage": "https://github.com/Dmitriy-Frostoff/rsschool-cv#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  }
}
